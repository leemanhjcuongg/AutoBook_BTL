<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imgLG"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@mipmap/loginbackground" />
    <EditText
        android:id="@+id/edtsdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/imgLG"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Số điện thoại"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="textPassword"
        android:layout_below="@id/edtsdt"
        android:layout_marginTop="20dp"
        android:minHeight="48dp"
        android:ems="20"
        android:hint="Mật khẩu"/>

    <CheckBox
        android:id="@+id/cBLuuMK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPass"
        android:layout_gravity="left"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:onClick="savePass"
        android:text="Nhớ mật khẩu"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cBLuuMK"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D3A51D"
        android:onClick="checkLogin"
        android:text="Đăng nhập" />

    <TextView
        android:id="@+id/txtViewDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDN"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="42dp"
        android:minHeight="48dp"
        android:onClick="register"
        android:text="Đăng ký?"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtViewQuenMK"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDN"
        android:layout_gravity="right"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="43dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@id/txtViewDK"
        android:text="Quên mật khẩu?"
        android:textColor="#000"
        android:textSize="15dp" />

</RelativeLayout>